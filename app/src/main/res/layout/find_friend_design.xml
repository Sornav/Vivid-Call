<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="25dp"
    android:layout_marginStart="25dp"
    android:elevation="20dp"
    >

<RelativeLayout
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:background="@drawable/backgroundcolor"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/image_notification"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:src="@drawable/profile_image"

        android:layout_width="320dp"
        android:layout_height="220dp"
        android:layout_marginTop="5dp">



    </ImageView>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/name_notification"
    android:textColor="@color/colorPrimary"
    android:text="@string/user_name"
    android:textAlignment="center"
    android:layout_marginTop="5dp"
    android:textSize="22sp"
    android:textStyle="bold"
    android:layout_below="@id/image_notification"
    >

</TextView>
<Button
    android:layout_width="130dp"
    android:layout_height="wrap_content"
    android:id="@+id/request_accept_btn"
    android:layout_below="@id/name_notification"
    android:layout_marginTop="8dp"
    android:layout_marginStart="40dp"
    android:layout_marginEnd="80dp"
    android:layout_marginBottom="10dp"
    android:padding="5dp"
    android:background="@drawable/savebutton"
    android:textColor="#2AFF03"
    android:text="Accept"
    android:textSize="16sp">


</Button>

    <Button
        android:id="@+id/request_decline_btn"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_notification"
        android:layout_alignEnd="@id/image_notification"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/savebutton"
        android:padding="5dp"
        android:text="Decline"
        android:textColor="#FF0000"
        android:textSize="16sp">

    </Button>

</RelativeLayout>
</android.support.v7.widget.CardView>